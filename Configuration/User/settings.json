{
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.renderWhitespace": "all",
        "editor.tabSize": 2,
        "editor.trimAutoWhitespace": false,
        "editor.wordWrap": "on",
        "files.trimTrailingWhitespace": false
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "'Cascadia Code PL', 'Consolas', 'Courier New', monospace",
    "editor.rulers": [
        115
    ],
    "editor.trimAutoWhitespace": true,
    "editor.wordWrap": "on",
    "extensions.autoUpdate": false,
    "files.associations": {
        "*.mof": "ini",
        "*.rc": "shellscript",
        "*.tpl": "yaml",
        ".tflint.hcl": "terraform",
    },
    "files.defaultLanguage": "powershell",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.views.lineHistory.enabled": true,
    "indentRainbow.includedLanguages": [
        "yaml"
    ],
    "markdown.extension.orderedList.marker": "one",
    "powershell.enableProfileLoading": true,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.powerShellDefaultVersion": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "powershell.sideBar.CommandExplorerVisibility": false,
    "scm.alwaysShowRepositories": true,
    "shellLauncher.shells.windows": [
        {
            "label": "PowerShell",
            "shell": "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
        },
        {
            "label": "WSL Bash",
            "shell": "C:\\Windows\\system32\\bash.exe"
        },
        {
            "label": "Ubuntu 20.04",
            "shell": "C:\\Users\\adamr\\AppData\\Local\\Microsoft\\WindowsApps\\ubuntu2004.exe"
        },
        {
            "label": "Windows PowerShell",
            "shell": "C:\\Windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe"
        },
        {
            "label": "cmd",
            "shell": "C:\\Windows\\system32\\cmd.exe"
        }
    ],
    "terminal.external.windowsExec": "wt",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontFamily": "'CaskaydiaCove NF', 'Cascadia Code PL', 'Courier New', monospace",
    "terminal.integrated.lineHeight": 0,
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "vsicons.dontShowNewVersionMessage": true,
    "window.zoomLevel": 0,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile"
}
